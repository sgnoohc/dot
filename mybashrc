parsetextable() {
    sed 's/&/,/g' $1 | sed 's/\$\\pm\$/,/g' | sed 's/\\hline//g' | grep "," | sed 's/\\\\//g' | sed 's/</-999 ,/g' | sed '-es/,/, Â±  ,/'{{100..1..2},1} | tr -d '$' | sed 's/[^0-9]*//'| sed 's/,/ , /g'
}

transpose() {

unset a

while read -a line; do
    for ((i=0; i < "${#line[@]}"; i++)); do
        a[$i]="${a[$i]} ${line[$i]}"
    done
done < $1
 
for ((i=0; i < ${#a[@]}; i++)); do
    echo ${a[i]}
done
}

